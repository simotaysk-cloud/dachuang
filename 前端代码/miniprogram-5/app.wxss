/**app.wxss**/
page {
  --primary-color: #2c3e50;
  --accent-color: #c0392b;
  --bg-color: #f4f7f6;
  --card-bg: #ffffff;
  --text-main: #333333;
  --text-sub: #666666;
  --border-color: #eeeeee;
  --layout-gap: 24rpx;
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: var(--text-main);
}

.page-container {
  padding: 36rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
}

.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  letter-spacing: 2rpx;
}

.desc {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 10rpx;
  line-height: 1.6;
}

.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 34rpx;
  margin-bottom: 34rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 28rpx;
  color: var(--primary-color);
  border-left: 8rpx solid var(--accent-color);
  padding-left: 20rpx;
}

.section-title + .section-title {
  margin-top: 18rpx;
}

.input {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  margin-bottom: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.textarea {
  display: block;
  width: 100%;
  min-height: 220rpx;
  padding: 30rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-bottom: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 1.6;
}

.input-inline {
  flex: none;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.search-bar {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 34rpx;
}

.search-bar-paired {
  /* Keep for compatibility. When a page wants search aligned with a 2-button row, use full width. */
  width: 100%;
}

.btn-group {
  display: flex;
  gap: var(--layout-gap);
}

.btn {
  flex: 1;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding: 20rpx 0;
  text-align: center;
  border: none;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-warn {
  background-color: #e74c3c;
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-small {
  background-color: var(--primary-color);
  color: white;
  font-size: 24rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn-mini {
  font-size: 22rpx;
  padding: 10rpx 18rpx;
  border-radius: 12rpx;
  line-height: 1.2;
  margin: 0;
}

.btn-mini-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-mini-warn {
  background-color: #e74c3c;
  color: #fff;
  border: none;
}

.input-compact {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  margin-bottom: 0;
}

.result-area {
  margin-top: 40rpx;
  background: #2d3436;
  color: #00cec9;
  padding: 20rpx;
  border-radius: 12rpx;
  font-family: monospace;
}

.result-scroll {
  max-height: 400rpx;
}


/* --- Common Components (Promoted from Planting) --- */

.picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
}

.picker-label {
  font-size: 24rpx;
  color: var(--text-sub);
}

.picker-value {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.batch-meta {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.batch-line {
  margin-top: 6rpx;
}

.field-label {
  margin: 22rpx 0 12rpx;
  font-size: 24rpx;
  color: var(--text-sub);
}

.readonly-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.readonly-label {
  font-size: 24rpx;
  color: var(--text-sub);
}

.readonly-value {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.sub-title {
  margin: 18rpx 0 18rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 18rpx;
}

.chip {
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  border: 2rpx solid var(--border-color);
  background: #fff;
  font-size: 24rpx;
  color: var(--text-sub);
}

.chip-active {
  border-color: var(--accent-color);
  color: var(--accent-color);
  background: rgba(192, 57, 43, 0.06);
}

.stat-row {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.stat-label {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.meta {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: var(--text-sub);
  line-height: 1.6;
}

.empty {
  margin-top: 28rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  text-align: center;
}

.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
}

.list-item:active {
  background: #f0f0f0;
}

.list-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.list-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.list-meta {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #999;
}

.list-action {
  font-size: 24rpx;
  color: var(--accent-color);
  font-weight: 600;
}

.list-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 16rpx;
}

/**app.wxss**/
page {
  --primary-color: #2c3e50;
  --accent-color: #c0392b;
  --bg-color: #f4f7f6;
  --card-bg: #ffffff;
  --text-main: #333333;
  --text-sub: #666666;
  --border-color: #eeeeee;
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: var(--text-main);
}

.page-container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  letter-spacing: 2rpx;
}

.desc {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 10rpx;
}

.card {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: var(--primary-color);
  border-left: 8rpx solid var(--accent-color);
  padding-left: 20rpx;
}

.input {
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.textarea {
  display: block;
  width: 100%;
  min-height: 220rpx;
  padding: 30rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 1.6;
}

.input-inline {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.search-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding: 20rpx 0;
  text-align: center;
  border: none;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-warn {
  background-color: #e74c3c;
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-small {
  background-color: var(--primary-color);
  color: white;
  font-size: 24rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.result-area {
  margin-top: 40rpx;
  background: #2d3436;
  color: #00cec9;
  padding: 20rpx;
  border-radius: 12rpx;
  font-family: monospace;
}

.result-scroll {
  max-height: 400rpx;
}

.result-text {
  font-size: 24rpx;
}
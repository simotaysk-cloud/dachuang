.code-box {
  font-family: monospace;
  background: #f8f9fa;
  border: 2rpx dashed var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.qr {
  width: 100%;
  height: 520rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid var(--border-color);
}


.login-container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    padding: 0 60rpx;
}

.login-header {
    text-align: center;
    margin-bottom: 120rpx;
}

.logo {
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 30rpx;
}

.title {
    font-size: 48rpx;
    font-weight: bold;
    color: var(--primary-color);
    margin-bottom: 16rpx;
}

.subtitle {
    font-size: 26rpx;
    color: var(--text-sub);
}

.login-card {
    width: 100%;
}

.role-hint {
    font-size: 28rpx;
    color: var(--text-main);
    text-align: center;
    margin-bottom: 40rpx;
}

.login-btn {
    background-color: #07c160;
    color: white;
    border-radius: 50rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    border: none;
}

.btn-content {
    display: flex;
    align-items: center;
}

.wx-icon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 16rpx;
}

.agreement {
    font-size: 22rpx;
    color: var(--text-sub);
    text-align: center;
    margin-top: 30rpx;
}

.version {
    position: absolute;
    bottom: 60rpx;
    font-size: 20rpx;
    color: #ccc;
}
.modal-scroll {
    width: 100%;
    max-width: 700rpx;
    max-height: 88vh;
    overflow-y: auto;
}

.batch-modal-center {
    text-align: center;
}

.qr-container {
    width: 400rpx;
    height: 400rpx;
    margin: 0 auto;
    border-radius: 14rpx;
    border: 2rpx solid var(--border-color);
    background: #f7fbff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.qr-image {
    width: 100%;
    height: 100%;
}

.batch-hint {
    margin-top: 16rpx;
    color: var(--text-sub);
    font-size: 22rpx;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

.footer-actions {
    margin-top: 24rpx;
    display: flex;
    gap: 10rpx;
}

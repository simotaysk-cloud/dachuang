/* pages/batch/index.wxss */

.list-action {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 10rpx;
}

.btn-icon {
    font-size: 20rpx;
    background: #1abc9c;
    color: #fff;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    font-weight: bold;
}

.btn-text {
    font-size: 24rpx;
    color: var(--accent-color);
    font-weight: 600;
}

/* Modal Styling */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.modal-content {
    width: 80%;
    background: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.modal-header {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.qr-container {
    width: 400rpx;
    height: 400rpx;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12rpx;
    padding: 20rpx;
}

.qr-image {
    width: 100%;
    height: 100%;
}

.batch-hint {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #7f8c8d;
    font-family: monospace;
}

.modal-footer {
    width: 100%;
    margin-top: 40rpx;
}

/* pages/batch/index.wxss */

.list-action {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 10rpx;
}

.btn-icon {
    font-size: 20rpx;
    background: #1abc9c;
    color: #fff;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    font-weight: bold;
}

.btn-text {
    font-size: 24rpx;
    color: var(--accent-color);
    font-weight: 600;
}

/* Modal (base styles are in app.wxss) */
.modal-scroll {
    width: 90%;
    max-width: none;
    max-height: 85vh;
    overflow-y: auto;
    display: block;
}

.batch-modal-center {
    text-align: center;
}

.qr-container {
    width: 400rpx;
    height: 400rpx;
    background: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12rpx;
    padding: 20rpx;
}

.qr-image {
    width: 100%;
    height: 100%;
}

.batch-hint {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #7f8c8d;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.footer-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
    gap: 10rpx;
}

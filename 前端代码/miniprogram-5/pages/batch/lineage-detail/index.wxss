.header-card {
    align-items: center;
    text-align: center;
}

.header-title {
    font-size: 34rpx;
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1.3;
}

.header-sub {
    margin-top: 10rpx;
    font-size: 23rpx;
    color: var(--text-sub);
}

.pill-row {
    margin-top: 14rpx;
    display: flex;
    justify-content: center;
}

.pill {
    display: inline-block;
    padding: 6rpx 14rpx;
    border-radius: 999rpx;
    border: 2rpx solid rgba(47, 79, 111, 0.2);
    background: rgba(47, 79, 111, 0.08);
    color: var(--primary-color);
    font-size: 20rpx;
}

.mono {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

.readonly-row:last-child {
    margin-bottom: 0;
}

.desc-box {
    padding: 20rpx;
    border: 2rpx solid var(--border-color);
    border-radius: 14rpx;
    background: #f9fbfe;
}

.desc-text {
    font-size: 24rpx;
    line-height: 1.6;
    color: var(--text-sub);
    word-break: break-all;
}

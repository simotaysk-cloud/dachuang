.trace-page {
    padding-top: 30rpx;
}

.trace-header {
    margin-bottom: 22rpx;
}

.trace-card {
    margin-bottom: 22rpx;
}

.trace-root {
    border: 2rpx solid var(--border-color);
    border-left-width: 8rpx;
    border-left-color: rgba(47, 79, 111, 0.35);
    border-radius: 14rpx;
    background: linear-gradient(180deg, #ffffff 0%, #f7fbff 100%);
    padding: 18rpx 16rpx;
}

.trace-root-title {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1.3;
}

.trace-root-batch {
    margin-top: 8rpx;
    font-size: 23rpx;
    color: var(--text-sub);
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

.trace-root-status {
    margin-top: 10rpx;
    display: inline-block;
    padding: 6rpx 12rpx;
    border-radius: 999rpx;
    border: 2rpx solid rgba(47, 79, 111, 0.2);
    background: rgba(47, 79, 111, 0.08);
    color: var(--primary-color);
    font-size: 20rpx;
}

.trace-timeline {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.trace-item {
    padding: 16rpx;
    border-radius: 14rpx;
    border: 2rpx solid var(--border-color);
    border-left-width: 8rpx;
    border-left-color: rgba(29, 78, 216, 0.38);
    background: #fff;
    box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.03);
}

.trace-item-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10rpx;
}

.process-tag {
    max-width: 70%;
    padding: 4rpx 12rpx;
    border-radius: 999rpx;
    border: 2rpx solid rgba(47, 79, 111, 0.2);
    background: rgba(47, 79, 111, 0.07);
    color: var(--primary-color);
    font-size: 20rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.detail-btn {
    padding: 5rpx 12rpx;
    border-radius: 10rpx;
    border: 2rpx solid var(--border-color);
    background: #f5f8fc;
    color: var(--primary-color);
    font-size: 20rpx;
}

.trace-item-title {
    margin-top: 10rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: var(--primary-color);
}

.trace-item-batch {
    margin-top: 8rpx;
    font-size: 22rpx;
    color: var(--text-sub);
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

.icon-copy {
    margin-left: 10rpx;
    color: var(--text-light);
    font-size: 20rpx;
}

.trace-item-desc {
    margin-top: 8rpx;
    font-size: 22rpx;
    line-height: 1.5;
    color: var(--text-sub);
}

.empty-tree {
    text-align: center;
    color: var(--text-sub);
    font-size: 23rpx;
    padding: 14rpx 0;
}

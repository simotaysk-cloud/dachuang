/* pages/line-work/index.wxss */

.steps {
  margin-top: 18rpx;
  border-top: 2rpx solid var(--border-color);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.steps-compact {
  border-top: none;
  margin-top: 10rpx;
}

.step {
  padding: 22rpx 0;
  border-bottom: 2rpx solid #f6f7f9;
}

.step-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

.step-sub {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 6rpx;
}

.step-lock {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
  background: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  flex: none;
}

.field-label {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 24rpx;
  margin-bottom: 10rpx;
}

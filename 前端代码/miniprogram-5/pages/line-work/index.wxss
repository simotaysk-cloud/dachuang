/* pages/line-work/index.wxss */

.code-box {
  font-family: monospace;
  background: #f8f9fa;
  border: 2rpx dashed var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}

.steps {
  margin-top: 18rpx;
  border-top: 2rpx solid var(--border-color);
}

.step {
  padding: 22rpx 0;
  border-bottom: 2rpx solid #f6f7f9;
}

.step-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

.step-sub {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 6rpx;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  padding: 30rpx;
  box-sizing: border-box;
}

.modal {
  width: 100%;
  max-width: 680rpx;
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 22rpx;
}

.field-label {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 24rpx;
  margin-bottom: 10rpx;
}

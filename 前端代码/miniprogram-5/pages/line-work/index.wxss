.steps {
  margin-top: 14rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  border-top: 2rpx solid #e8eef5;
  padding-top: 12rpx;
}

.steps-compact {
  margin-top: 8rpx;
  border-top: 0;
  padding-top: 0;
}

.step {
  padding: 16rpx 0;
  border-bottom: 2rpx solid #edf2f7;
}

.step-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.step-title {
  font-size: 27rpx;
  line-height: 1.35;
  font-weight: 600;
  color: var(--primary-color);
}

.step-sub {
  margin-top: 4rpx;
  font-size: 21rpx;
  color: var(--text-sub);
}

.step-lock {
  flex: none;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(47, 79, 111, 0.2);
  background: rgba(47, 79, 111, 0.08);
  color: var(--primary-color);
  font-size: 20rpx;
}

.field-label {
  margin-top: 18rpx;
  margin-bottom: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

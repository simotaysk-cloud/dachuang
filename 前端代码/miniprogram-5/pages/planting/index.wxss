/* pages/planting/index.wxss */
.picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
}

.picker-label {
  font-size: 24rpx;
  color: var(--text-sub);
}

.picker-value {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.batch-meta {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.batch-line {
  margin-top: 6rpx;
}

.field-label {
  margin: 8rpx 0 10rpx;
  font-size: 24rpx;
  color: var(--text-sub);
}

.readonly-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.readonly-label {
  font-size: 24rpx;
  color: var(--text-sub);
}

.readonly-value {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.sub-title {
  margin: 10rpx 0 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 18rpx;
}

.chip {
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  border: 2rpx solid var(--border-color);
  background: #fff;
  font-size: 24rpx;
  color: var(--text-sub);
}

.chip-active {
  border-color: var(--accent-color);
  color: var(--accent-color);
  background: rgba(192, 57, 43, 0.06);
}

.stat-row {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.stat-label {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.meta {
  margin-top: 18rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.empty {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  text-align: center;
}

.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  background: #fff;
}

.list-item:active {
  background: #f0f0f0;
}

.list-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.list-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--text-sub);
}

.list-meta {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #999;
}

.list-action {
  font-size: 24rpx;
  color: var(--accent-color);
  font-weight: 600;
}

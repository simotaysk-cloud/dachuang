<view class="page-container">
    <view class="header">
        <view class="title">新建发运单</view>
        <view class="desc">创建后可在列表中维护轨迹事件</view>
    </view>

    <view class="card">
        <view class="section-title">发运信息</view>
        <view class="field-label">成品批次号</view>
        <input class="input {{batchLocked ? 'input-locked' : ''}}" placeholder="输入批次号" value="{{form.batchNo}}" data-field="batchNo" bindinput="onInput" disabled="{{batchLocked}}" />
        <view class="field-label">收货方/经销商</view>
        <input class="input" placeholder="例如：某连锁药店" value="{{form.distributorName}}" data-field="distributorName" bindinput="onInput" />
        <view class="field-label">承运商</view>
        <input class="input" placeholder="例如：顺丰冷链" value="{{form.carrier}}" data-field="carrier" bindinput="onInput" />
        <view class="field-label">物流运单号</view>
        <input class="input" placeholder="快递单号" value="{{form.trackingNo}}" data-field="trackingNo" bindinput="onInput" />
        <view class="field-label">备注</view>
        <textarea class="textarea" placeholder="发货备注..." value="{{form.remarks}}" data-field="remarks" bindinput="onInput" />
        <view class="btn-group">
            <button class="btn btn-primary" bindtap="create">创建</button>
            <button class="btn btn-outline" bindtap="cancel">返回</button>
        </view>
    </view>
</view>

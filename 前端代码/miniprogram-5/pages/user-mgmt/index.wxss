.role-tag {
  display: inline-block;
  margin-right: 10rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  border: 2rpx solid var(--border-color);
  background: rgba(47, 79, 111, 0.05);
  color: var(--primary-color);
  font-size: 19rpx;
}

.role-tag.ADMIN {
  border-color: rgba(199, 70, 54, 0.32);
  background: rgba(199, 70, 54, 0.1);
  color: #b13d2f;
}

.role-tag.FARMER {
  border-color: rgba(47, 133, 90, 0.32);
  background: rgba(47, 133, 90, 0.1);
  color: #216644;
}

.role-tag.FACTORY,
.role-tag.MANUFACTURER,
.role-tag.MERCHANT {
  border-color: rgba(31, 74, 114, 0.3);
  background: rgba(31, 74, 114, 0.1);
  color: #1f4a72;
}

.role-tag.LOGISTICS {
  border-color: rgba(42, 102, 144, 0.32);
  background: rgba(42, 102, 144, 0.1);
  color: #2a6690;
}

.role-tag.QUALITY {
  border-color: rgba(15, 118, 110, 0.32);
  background: rgba(15, 118, 110, 0.1);
  color: #0f766e;
}

.role-tag.REGULATOR {
  border-color: rgba(146, 109, 48, 0.3);
  background: rgba(146, 109, 48, 0.1);
  color: #8b5e34;
}

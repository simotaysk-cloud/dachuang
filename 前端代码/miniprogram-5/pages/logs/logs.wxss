.log-page {
  padding-top: 30rpx;
}

.log-header {
  margin-bottom: 24rpx;
}

.log-card {
  margin-bottom: 22rpx;
  padding: 24rpx;
}

.card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.card-head .section-title {
  margin-bottom: 0;
}

.sync-badge {
  font-size: 20rpx;
  color: var(--text-sub);
  background: #f8fafc;
  border: 2rpx solid var(--border-color);
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.stat-cell {
  background: linear-gradient(180deg, #ffffff 0%, #f7fbff 100%);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 12rpx 8rpx;
  text-align: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.stat-label {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: var(--text-sub);
}

.search-group {
  border: 2rpx solid #e4ebf2;
  border-radius: 12rpx;
  background: #f8fafd;
  padding: 8rpx;
  width: 660rpx;
  margin: 0 auto 12rpx;
  box-sizing: border-box;
}

.search-input {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 24rpx;
  padding: 0 14rpx;
  border-radius: 10rpx;
  background: transparent;
  border: 0;
  box-sizing: border-box;
}

.filter-top-row {
  display: flex;
  gap: 10rpx;
  align-items: center;
  margin-bottom: 12rpx;
}

.filter-top-row .filter-select {
  flex: 1;
  min-width: 0;
}

.filter-top-row .btn-refresh {
  flex: none;
  width: 120rpx;
}

.search-actions {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 10rpx;
}

.search-btn {
  min-width: 0;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
  padding: 0;
  border-radius: 10rpx;
  border: 0;
}

.search-btn-primary {
  width: 220rpx;
  background: var(--primary-color);
  color: #fff;
}

.search-btn-muted {
  width: 130rpx;
  background: #eaf0f6;
  color: #556476;
}

.filter-select {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
  height: 76rpx;
  padding: 0 18rpx;
  border: 2rpx solid #d8e3ec;
  border-radius: 12rpx;
  background: #f9fafb;
  box-sizing: border-box;
}

.filter-label {
  flex: none;
  font-size: 22rpx;
  color: var(--text-sub);
}

.filter-value {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.btn-refresh {
  width: 100%;
  min-width: 0;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 22rpx;
  padding: 0;
  border: 0;
  border-radius: 12rpx;
  background: var(--primary-strong);
  color: #fff;
}

.timeline {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.log-item {
  border-radius: 14rpx;
  border: 2rpx solid var(--border-color);
  border-left-width: 8rpx;
  padding: 14rpx 16rpx;
  background: #fff;
}

.mod-batch {
  border-left-color: #2f6690;
}

.mod-planting {
  border-left-color: #2f855a;
}

.mod-processing {
  border-left-color: #8b5e34;
}

.mod-inspection {
  border-left-color: #0f766e;
}

.mod-logistics {
  border-left-color: #1d4ed8;
}

.log-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8rpx;
}

.log-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--primary-color);
  flex: 1;
  min-width: 0;
}

.log-tag {
  font-size: 20rpx;
  color: #334155;
  border: 2rpx solid rgba(71, 85, 105, 0.24);
  background: rgba(241, 245, 249, 0.8);
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
  white-space: nowrap;
}

.log-meta {
  margin-top: 8rpx;
  font-size: 21rpx;
  color: var(--text-sub);
}

.log-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #4b5563;
  line-height: 1.5;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(2, 6, 23, 0.4);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 999;
}

.detail-modal {
  width: 100%;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 24rpx 24rpx 30rpx;
  box-shadow: 0 -6rpx 24rpx rgba(2, 6, 23, 0.12);
}

.detail-text {
  margin-top: 16rpx;
  max-height: 50vh;
  overflow-y: auto;
  font-size: 24rpx;
  line-height: 1.7;
  color: #334155;
  white-space: pre-wrap;
  word-break: break-all;
}
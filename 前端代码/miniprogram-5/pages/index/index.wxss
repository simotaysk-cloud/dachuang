page {
  background: #f5f6f7;
}

.scrollarea {
  height: 100vh;
}

.container {
  padding: 24rpx;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 8rpx;
}

.sub {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #333;
}

.input {
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.row {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.btn {
  background: #1aad19;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

.output {
  font-size: 24rpx;
  color: #333;
  white-space: pre-wrap;
}

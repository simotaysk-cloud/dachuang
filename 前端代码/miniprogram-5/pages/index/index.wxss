.home-page {
  padding-top: 30rpx;
}

.home-header {
  margin-bottom: 22rpx;
}

.home-card {
  margin-bottom: 22rpx;
}

.card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.card-head .section-title {
  margin-bottom: 0;
}

.sync-badge {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  border: 2rpx solid var(--border-color);
  background: #f8fafc;
  font-size: 20rpx;
  color: var(--text-sub);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.stat-cell {
  text-align: center;
  padding: 12rpx 10rpx;
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
  background: linear-gradient(180deg, #ffffff 0%, #f7fbff 100%);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.menu-item {
  min-height: 172rpx;
  border-radius: 16rpx;
  border: 2rpx solid #d6e2ed;
  background: #f7fbff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 14rpx 10rpx;
  box-sizing: border-box;
}

.menu-item:active {
  background: #f1f7fd;
  border-color: #d1dfeb;
}

.menu-icon {
  width: auto;
  height: auto;
  border: 0;
  background: transparent;
  color: var(--primary-color);
  font-size: 34rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.menu-label {
  font-size: 23rpx;
  line-height: 1.4;
  text-align: center;
  color: var(--primary-color);
  font-weight: 650;
}

.footer {
  margin-top: 24rpx;
  padding: 18rpx 0 28rpx;
  text-align: center;
  font-size: 21rpx;
  color: var(--text-light);
}

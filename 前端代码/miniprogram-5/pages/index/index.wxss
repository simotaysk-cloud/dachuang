.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.menu-item {
  background: #fff;
  height: 180rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--border-color);
}

.menu-item:active {
  background: #f0f0f0;
}

.menu-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 999rpx;
  background: rgba(44, 62, 80, 0.08);
  color: var(--primary-color);
  font-size: 34rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 14rpx;
}

.menu-label {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.footer {
  margin-top: 60rpx;
  text-align: center;
  font-size: 22rpx;
  color: #999;
  padding-bottom: 40rpx;
}

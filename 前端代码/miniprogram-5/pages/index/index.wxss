.dashboard-header {
  padding: 40rpx 0;
  text-align: center;
}

.status-bar {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 30rpx;
}

.status-item {
  font-size: 24rpx;
  color: var(--text-sub);
  display: flex;
  align-items: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.online {
  background-color: #2ecc71;
  box-shadow: 0 0 10rpx #2ecc71;
}

.offline {
  background-color: #e74c3c;
}

.setup-card {
  margin-top: -20rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-top: 40rpx;
}

.menu-item {
  background: white;
  height: 200rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.menu-item:active {
  transform: scale(0.95);
  background: #f0f0f0;
}

.menu-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.menu-label {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.footer {
  margin-top: 60rpx;
  text-align: center;
  font-size: 22rpx;
  color: #999;
  padding-bottom: 40rpx;
}
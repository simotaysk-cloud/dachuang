.page-container {
    background: #fdfdfd;
    min-height: 100vh;
    padding-bottom: 60rpx;
}

/* Hero Section */
.hero-section {
    width: 100%;
    height: 480rpx;
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: flex-end;
    padding: 0 40rpx 80rpx;
}

.hero-content {
    color: #fff;
}

.product-badge {
    background: rgba(26, 188, 156, 0.9);
    display: inline-flex;
    align-items: center;
    padding: 6rpx 20rpx;
    border-radius: 40rpx;
    font-size: 20rpx;
    margin-bottom: 16rpx;
}

.badge-icon {
    margin-right: 8rpx;
}

.hero-name {
    font-size: 52rpx;
    font-weight: 800;
    text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.hero-tags {
    margin-top: 12rpx;
    display: flex;
}

.hero-tag {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(4rpx);
    padding: 4rpx 16rpx;
    border-radius: 6rpx;
    font-size: 22rpx;
    margin-right: 12rpx;
    border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* Search Floating */
.search-floating {
    margin: -40rpx 30rpx 0;
    position: relative;
    z-index: 10;
}

.search-floating.has-report {
    margin-bottom: 40rpx;
}

.search-bar {
    background: #fff;
    padding: 10rpx 10rpx 10rpx 40rpx;
    border-radius: 60rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
    border: 1rpx solid #eee;
}

.input-inline {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.query-btn {
    background: #27ae60;
    color: #fff;
    padding: 18rpx 44rpx;
    border-radius: 50rpx;
    font-size: 26rpx;
    font-weight: 600;
}

/* Common Card */
.card {
    background: #fff;
    border-radius: 24rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
}

/* Summary Card */
.summary-card {
    margin: 30rpx;
}

.section-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.title-text {
    font-size: 32rpx;
    font-weight: bold;
    color: #2c3e50;
}

.origin-tag {
    font-size: 22rpx;
    color: #27ae60;
    background: #eafaea;
    padding: 4rpx 12rpx;
    border-radius: 4rpx;
}

.summary-desc {
    font-size: 26rpx;
    color: #636e72;
    line-height: 1.6;
    margin-bottom: 30rpx;
}

.gs1-box {
    background: #f8f9fa;
    padding: 16rpx 24rpx;
    border-radius: 12rpx;
    border-left: 6rpx solid #dcdde1;
}

.gs1-label {
    font-size: 20rpx;
    color: #95a5a6;
    margin-bottom: 4rpx;
}

.gs1-code {
    font-family: monospace;
    font-size: 24rpx;
    color: #2f3640;
    letter-spacing: 2rpx;
}

/* Section Divider */
.section-header {
    display: flex;
    align-items: center;
    padding: 40rpx 60rpx;
}

.header-line {
    flex: 1;
    height: 1rpx;
    background: #eee;
}

.header-text {
    padding: 0 30rpx;
    font-size: 24rpx;
    color: #bdc3c7;
    font-weight: 600;
    letter-spacing: 4rpx;
}

/* Wiki Card */
.wiki-card {
    margin: 0 30rpx;
}

.wiki-section {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f6f7f9;
}

.wiki-section:last-child {
    border-bottom: none;
}

.wiki-title {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #2c3e50;
}

.wiki-icon {
    margin-right: 12rpx;
    font-size: 34rpx;
}

.wiki-title.warning {
    color: #e67e22;
}

.wiki-title.pairing {
    color: #2980b9;
}

.wiki-content {
    font-size: 26rpx;
    color: #7f8c8d;
    line-height: 1.6;
    padding-left: 46rpx;
}

.pairing-item {
    background: #f1f7fc;
    padding: 10rpx 20rpx;
    border-radius: 8rpx;
    margin-bottom: 10rpx;
    color: #34495e;
}

/* Timeline */
.timeline-container {
    padding: 0 30rpx 40rpx 40rpx;
}

.timeline-item {
    display: flex;
    position: relative;
    padding-bottom: 60rpx;
}

.record-image {
    width: 100%;
    height: 300rpx;
    border-radius: 12rpx;
    margin-top: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 177rpx;
    top: 60rpx;
    bottom: 0;
    width: 2rpx;
    background: #eceff1;
}

.timeline-item:last-child::before {
    display: none;
}

.item-left {
    width: 140rpx;
    text-align: right;
    padding-top: 10rpx;
}

.time-main {
    font-size: 28rpx;
    font-weight: 700;
    color: #34495e;
}

.time-sub {
    font-size: 16rpx;
    color: #bdc3c7;
    margin-top: 4rpx;
}

.item-dot {
    width: 80rpx;
    display: flex;
    justify-content: center;
    position: relative;
    z-index: 5;
}

.dot-inner {
    width: 52rpx;
    height: 52rpx;
    background: #fff;
    border: 3rpx solid #27ae60;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(39, 174, 96, 0.2);
}

.item-content {
    flex: 1;
    margin-top: -10rpx;
}

.content-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 12rpx;
}

.line-badge {
    display: inline-block;
    background: #f1f2f6;
    color: #7f8c8d;
    font-size: 18rpx;
    font-weight: 600;
    padding: 4rpx 12rpx;
    border-radius: 4rpx;
    margin-bottom: 8rpx;
    text-transform: uppercase;
    letter-spacing: 1rpx;
    border: 1rpx solid #dfe6e9;
}

.content-detail {
    font-size: 24rpx;
    color: #7f8c8d;
    line-height: 1.5;
}

.highlight .dot-inner {
    border-color: #f1c40f;
    background: #fffef2;
    box-shadow: 0 4rpx 12rpx rgba(241, 196, 15, 0.3);
}

/* Footer */
.safety-footer {
    text-align: center;
    padding: 60rpx 40rpx;
}

.seal-logo {
    font-size: 32rpx;
    font-weight: 800;
    color: #bdc3c7;
    letter-spacing: 8rpx;
    margin-bottom: 20rpx;
}

.safety-tips {
    font-size: 20rpx;
    color: #bdc3c7;
    margin-bottom: 10rpx;
}

.report-id {
    font-size: 18rpx;
    color: #ecf0f1;
}

/* States */
.initial-state {
    padding-top: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.hero-placeholder image {
    width: 500rpx;
    height: 400rpx;
    opacity: 0.5;
}

.placeholder-text {
    margin-top: 40rpx;
    font-size: 28rpx;
    color: #cbd5e0;
    letter-spacing: 2rpx;
}

/* Animations */
.animated {
    animation-duration: 0.6s;
    animation-fill-mode: both;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20rpx);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fadeIn {
    animation-name: fadeIn;
}